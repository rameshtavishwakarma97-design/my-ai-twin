{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "25mb",
        "pythonRuntime": "python3.11",
        "installCommand": "pip install -r requirements.txt",
        "buildCommand": "echo 'Build complete'"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 10,
      "memory": 512
    }
  }
}
